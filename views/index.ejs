<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Otaku Hub</title>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

    <style>
        body { padding-top:15px; background-color: #ccc;}
        img { width: 100%;}
        #banner-image {
            margin-top: -20px;
            width: 100%;
            height: 40em;
            background-image: url('https://i.imgur.com/QYaf4F1.jpg');
            background-repeat: no-repeat;
            /* background-position: center; */
            background-size: cover;
            /* margin: 0; */
        }
        #banner-image > img {
            width: 100%;
            height: inherit;
            object-fit: contain;
            margin: 0;
            display: block;
        }
    </style>
</head>

<body>
    <header>
        <%- include('partials/navbar') %>
        <div id="banner-image">
            
        </div>
    </header>
    <div class="container">
        <!-- <% if (title) { %>
            <h2><%= title %></h2>
        <% } %> -->
        <div class="panel panel-danger">
            <div class="panel panel-heading text-center">
                <h1>It's Hero Time.</h1>
            </div>
            <div class="panel-body" id="all">

                <% if (message) { %>
                    <div class="alert alert-success" role="alert">
                        <%= message %>
                    </div>
                <% } %> 

                <a href="/create">
                    <div class="col-xs-6 col-md-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img src="https://png.icons8.com/ios/1600/add.png">
                            </div>
                            <div class="panel-footer">
                                New pokemon
                            </div>
                        </div>
                    </div> 
                </a>

                <% pokemon.pokemon.forEach(function(poke){ %>
                    <a href="/view/<%-poke.id %>">
                        <div class="col-xs-6 col-md-2">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <img src="<%-poke.image %>">
                                </div>
                                <div class="panel-footer">
                                    <%-poke.name %>
                                </div>
                            </div>
                        </div> 
                    </a>
                <% }); %>   

            </div>
            <div class="panel-footer text-center">
                <p>All rights reserved 2018 | Nate.</p>
            </div>
        </div>
    </div>

</body>
</html>